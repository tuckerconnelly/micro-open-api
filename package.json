{
  "name": "micro-open-api",
  "version": "0.0.5",
  "description": "Route using open API specification",
  "repository": "https://github.com/tuckerconnelly/micro-open-api",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "test": "DEBUG=micro-open-api* MICRO_OPEN_API_IGNORE_PATHNAMES_WITH= jest --testPathIgnorePatterns=__mocks__",
    "prettier": "prettier --write 'src/**/*.js'",
    "lint": "eslint 'src/**/*.js'"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "glob": "^7.1.5",
    "js-yaml": "^3.13.1",
    "map-values-deep": "^1.0.2",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "axios": "^0.19.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.5.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "micro": "^9.3.4",
    "prettier": "^1.18.2",
    "test-listen": "^1.1.0"
  },
  "peerDependencies": {
    "micro": "^9.3.4"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-console": 0
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run prettier -- ",
      "npm run lint -- ",
      "git add"
    ]
  },
  "jest": {
    "watchPathIgnorePatterns": [
      "tmp",
      "json"
    ],
    "forceExit": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "npm ci"
    }
  }
}
